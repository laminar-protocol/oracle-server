{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2019",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@orml/fetch-price": ["packages/fetch-price/src"],
            "@orml/fetch-price/*": ["packages/fetch-price/src/*"],
            "@orml/oracle-server": ["packages/oracle-server/src"],
            "@orml/oracle-server/*": ["packages/oracle-server/src/*"]
        },
        "resolveJsonModule": true
    }
}
